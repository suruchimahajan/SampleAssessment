<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <include layout="@layout/screen3_toolbar"
            />

        <ImageView
            android:id="@+id/screen3_image"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginStart="25dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toTopOf="@+id/screen3_tximagtxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/screen3_image"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/screen3_tximagtxt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="20dp"
            android:text="ImageText"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/screen3_image"
            app:layout_constraintEnd_toEndOf="@+id/screen3_image"
            app:layout_constraintTop_toBottomOf="@+id/screen3_image" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>